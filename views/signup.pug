doctype html
html(lang='en')

head
  title Social - Signup

body
  h1 Signup
  form(action='/auth/signup' method="POST")
    h2 Username:
    input(type="username" placeholder="Enter a valid username" name="username")
    h2 Password:
    input(type="password" placeholder="Enter a valid password" name="password")
    br
    br
    input(type='submit' value='Signup')
